# Invoke this file by doing: brew bundle Caskfile

# brew formulae:
install wget
install node
install maven
install gradle
install openssl
install git
install keybase
install docker
install tree
install pyenv
install yarn


# install JDK versioning tool
tap jenv/jenv
install jenv

# Install Cask - http://caskroom.io
install caskroom/cask/brew-cask

# Virtualization
cask install --appdir=/Applications vagrant
cask install --appdir=/Applications virtualbox

# Applications
cask install --appdir=/Applications google-chrome
cask install --appdir=/Applications iterm2
cask install --appdir=/Applications vlc
cask install --appdir=/Applications firefox
cask install --appdir=/Applications adium
cask install --appdir=/Applications dropbox
cask install --appdir=/Applications java
